#set screen resolution
#macbook
exec --no-startup-id xrandr --output eDP1 --mode 1920x1200

#Set wallpaper
exec --no-startup-id sh ~/.wallpaper &
#start network manager
exec --no-startup-id /usr/bin/nm-applet &
#start dropbox
exec --no-startup-id /usr/bin/dropbox start &

exec --no-startup-id /usr/local/bin/kbdlight set 100
#bind sound keys
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume 1 -- +3%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume 1 -- -3% 
bindsym XF86AudioMute exec pactl set-sink-mute 1 toggle

#bind brightness controls
bindsym XF86MonBrightnessUp exec xbacklight +7%
bindsym XF86MonBrightnessDown exec xbacklight -7%

#bind lock screen shortcut
bindsym $mod+Shift+l exec slock

#bind keyboard backlight
bindsym XF86KbdBrightnessUp exec kbdlight up
bindsym XF86KbdBrightnessDown exec kbdlight down
bindsym XF86LaunchA exec google-chrome
bindsym XF86LaunchB exec pcmanfm

